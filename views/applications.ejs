<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Applications</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #191A19;
            color: #A9DFBF;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('https://i.imgur.com/FYYcF5j.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }
        .applications-container {
            background-color: rgba(0, 0, 0, 0.8);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            width: 80%;
            max-width: 600px;
        }
        .application-item {
            padding: 10px;
            border-bottom: 1px solid #555;
        }
        button {
            background-color: #27AE60;
            color: #fff;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #2ECC71;
        }
        .reject-button {
            background-color: #E74C3C;
        }
        .reject-button:hover {
            background-color: #FF6F61;
        }
                a {
            display: inline-block;
            background-color: #27AE60; /* Light green */
            color: #fff;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        a:hover {
            background-color: #2ECC71; /* Slightly lighter green */
        }
    </style>
</head>
<body>
    <div class="applications-container">
        <h1>Pending Applications</h1>
        <a href="/admin" class="button">back</a>
        <% applications.forEach(application => { %>
            <div class="application-item">
                <p><strong>Username:</strong> <%= application.username %></p>
                <p><strong>Email:</strong> <%= application.email %></p>
                <p><strong>Discord ID:</strong> <%= application.discordId %></p>
                <form action="/admin/applications/<%= application._id %>/accept" method="post" style="display: inline;">
                    <button type="submit">Accept</button>
                </form>
                <form action="/admin/applications/<%= application._id %>/reject" method="post" style="display: inline;">
                    <button type="submit" class="reject-button">Reject</button>
                    
                </form>
                
            </div>
        <% }) %>
    </div>
</body>
</html>
