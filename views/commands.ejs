                <button class="section-btn" data-section="music">Music</button>
                <button class="section-btn" data-section="fun">Fun</button>
            </div>
            <div class="commands-content">
                <section id="public" class="command-section active">
                    <h2>Public Commands</h2>
                    <div class="command-list">
                        <div class="command-item">
                            <h3 class="command-name">/afk</h3>
                            <div class="command-description hidden">
                                <p>FSet your AFK</p>
                                <div class="code-block">
                                    <code>/help</code>
                                </div>
                                <p>Get information about the afk category commands</p>
                            <div class="code-block">
                                <code>/set</code>
                            </div>
                            <p>Put yourself AFK</p>
                        <div class="code-block">
                            <code>/list</code>
                        </div>
                        <p>Show all afk users</p>
                    </div>
                        </div>

                        <div class="command-item">
                            <h3 class="command-name">/add</h3>
                            <div class="command-description hidden">
                                <p>Add media to your server</p>
                                <div class="code-block">
                                    <code>/list</code>
                        </div>
                        <p>Show all afk users</p>
                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="admin" class="command-section">
                    <h2>Admin Commands</h2>
                    <div class="command-list">
                        <div class="command-item">
                            <h3 class="command-name">/kick</h3>
                            <div class="command-description hidden">
                                <p>Kick a user from the server.</p>
                                <div class="code-block">
                                    <code>/kick @user [reason]</code>
                                </div>
                            </div>
                        </div>
                        <div class="command-item">
                            <h3 class="command-name">/ban</h3>
                            <div class="command-description hidden">
                                <p>Ban a user from the server.</p>
                                <div class="code-block">
                                    <code>/ban @user [reason]</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="music" class="command-section">
                    <h2>Music Commands</h2>
                    <div class="command-list">
                        <div class="command-item">
                            <h3 class="command-name">/play</h3>
                            <div class="command-description hidden">
                                <p>Play a song or add it to the queue.</p>
                                <div class="code-block">
                                    <code>/play [song name or URL]</code>
                                </div>
                            </div>
                        </div>
                        <div class="command-item">
                            <h3 class="command-name">/skip</h3>
                            <div class="command-description hidden">
                                <p>Skip the current song.</p>
                                <div class="code-block">
                                    <code>/skip</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="fun" class="command-section">
                    <h2>Fun Commands</h2>
                    <div class="command-list">
                        <div class="command-item">
                            <h3 class="command-name">/meme</h3>
                            <div class="command-description hidden">
                                <p>Get a random meme.</p>
                                <div class="code-block">
                                    <code>/meme</code>
                                </div>
                            </div>
                        </div>
                        <div class="command-item">
                            <h3 class="command-name">/joke</h3>
                            <div class="command-description hidden">
                                <p>Tell a random joke.</p>
                                <div class="code-block">
                                    <code>/joke</code>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>

